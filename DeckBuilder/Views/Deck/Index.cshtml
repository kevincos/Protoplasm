@model IEnumerable<DeckBuilder.Models.Deck>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Name
        </th>
        <th>
            Player
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Player.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DeckID }) |
            @Html.ActionLink("Details", "Details", new { id=item.DeckID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.DeckID })
        </td>
    </tr>
}

</table>
