@model IEnumerable<DeckBuilder.Models.MatchRequest>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table>
    <tr>
        <th>
            GameId
        </th>
        <th>
            PlayerId
        </th>
        <th>
            NumPlayers
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GameId)
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.PlayerId)
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfPlayers)
        </td>        
        <td>
            @Html.ActionLink("Delete", "Delete", new { id=item.MatchRequestID })
        </td>
    </tr>
}

</table>
