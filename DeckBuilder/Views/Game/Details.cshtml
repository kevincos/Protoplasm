@model DeckBuilder.ViewModels.GameDetailsViewModel

@{
    ViewBag.Title = @Model.Name;
}

<div class="GamePageInfo">
    <h1>@Model.Name</h1>
    <img class="GameProfileImage" src="../../@Model.ImageUrl" alt="@Model.Name" />
    
    
        
        <p class="GamePageDescription"> <span class="GamePageDescriptionHeader">Description: </span>    @Model.Description</p>
    
    <div style="margin-left:90px"><a href="/MatchRequest/Add?gameId=@Model.GameId&numPlayers=2" class="RankedMatchButton" target="_blank"></a></div> 
</div>
<div class="GamePageTables">   

    <br />
    <table>
        <tr>
            <th>
                Rank
            </th>
            <th>
                Name
            </th>
            <th>
                Win Rate
            </th>
            <th>
                Games Played
            </th>
        </tr>

        <h2>Leaderboard</h2><br />
        @for (var i = 0; i < Model.Rankings.Count; i++)
        {
            <tr>
                <td>
                    @(i+1)
                </td>        
                <td>
                    @Html.DisplayFor(modelItem => Model.Rankings[i].Name)
                </td>        
                <td>
                    @Html.DisplayFor(modelItem => Model.Rankings[i].WinRate)
                </td>  
                <td>
                    @Html.DisplayFor(modelItem => Model.Rankings[i].GamesPlayed)
                </td>  
            </tr>
        }
    </table>

    <br />

    <table>
        <tr>
            <th>
                Version
            </th>
            <th>
                Dev Stage
            </th>
            <th>
                Date
            </th>
        </tr>

        <h2>Version History</h2><br />
        @foreach (var item in Model.Versions) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.VersionString)
                </td>        
                <td>
                    @Html.DisplayFor(modelItem => item.DevStage)
                </td>  
                <td>
                    @Html.DisplayFor(modelItem => item.CreationDate)
                </td>  
            </tr>
        }
    </table>
</div>
