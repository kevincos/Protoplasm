@model IEnumerable<DeckBuilder.Models.Player>

@{
    ViewBag.Title = "Player List";
}

<h2>Players</h2>

<p>Search for your friends in the Protoplasm databse. Check out their stats or challenge them to a game using the dropdown menu. Development versions of your games are indicated by an asterisk.</p>

<span>Search: <input type="text" id="SearchBox" /></span> 

<span class="ListNavigationArea">
<span id="PrevPage" class="ListNavigation">(Prev) </span>
<span id="DisplayRange"></span>
<span id="NextPage" class="ListNavigation"> (Next)</span>
</span>
<br /><br />

<div id="PlayerList">
    @for (var i = 0; i < 10; i++)
    {
        <div class="ListPanel">
            <a class="PanelLinkAnchor" href=""><span class="PanelLink"></span></a>
            <img class="ListPanelImage" alt="Unknown" 
                    src="@Url.Content("~/Content/Images/Site/questionmark.png")" />
            <div class="ListPanelInfo">     
                <div class="ListPanelHeader">Name</div>                   
                <span class = "ListPanelText">Level: ??</span>
                <span class = "ListPanelText">Exp: ??</span>
            </div>
            <div class = "ListPanelInvite">
                <select class="ListPanelSelect">       
                    @for (var j = 0; j < ViewBag.gameNameList.Count; j++)
                    {
                        <option value = @ViewBag.gameVersionList[j]>@ViewBag.gameNameList[j]</option>
                    }             
                </select>
                <div><a class="ChallengeButton"></a></div> 
            </div>
        </div>
    }

